[Unit]
Description = cowrie daemon

[Service]
WorkingDirectory = /home/cowrie/cowrie-{{ cowrie_version }}
ExecStart = /bin/bash -c 'PATH="$HOME/.pyenv/shims:$PATH" exec $HOME/cowrie-{{ cowrie_version }}/bin/cowrie start'
Restart = always
Type = simple
User = cowrie

[Install]
WantedBy=multi-user.target
